<section id='event-dashboard'>
  <section class='introduction-section-dashboard'>
    <article class='introduction-article-event'>
      <div id='title-container'>
        <h1>Events Dashboard</h1>
      </div>
      <div id='event-list'>

        {{#if events.length}}
          <!-- Loop over each object in the events array -->

          {{#each events as |event|}}

            <div class='dashboard-card'>

              <div class='dashboard-card-header'>

                <div class='dashboard-card-header-media'>

                  <div class='dashboard-card-header-title'>

                    <h4>{{event.event_title}}</h4>

                  </div>

                  <div class='dashboard-card-header-cta-group'>

                    <button class='delete-button'>
                      <img
                        class='dashboard-card-header-cta'
                        src='../public/assets/images/Trash-Can.svg'
                        data-id='{{event.id}}'
                      />
                    </button>

                    <button class='check-button'>
                      <img
                        class='dashboard-card-header-cta'
                        src='../public/assets/images/View.svg'
                        data-id='{{event.id}}'
                      />
                    </button>

                    <button class='check-button'>
                      <img
                        class='dashboard-card-header-cta'
                        src='../../public/assets/images/Edit.svg'
                        data-id='{{event.id}}'
                      />
                    </button>

                  </div>

                </div>

              </div>

              <p class='event-type-text'>{{event.event_type}}</p>

              <div class='dashboard-card-footer'>

                <p class='event-date-text'>{{event.event_date}}</p>

              </div>

            </div>

          {{/each}}

        {{/if}}

      </div>

    </article>
  </section>
</section>

<script src='/assets/js/dashboard.js'></script>