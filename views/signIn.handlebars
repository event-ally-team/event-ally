<section class="loginLogout">

<section class="userContainer">
      <div class="userContent">
        <div class="signInContainer"></div>
       
        <div>
          <form class="signInForm" action="/login" method="post">
            <p class="signMessage">Welcome to <span class="eventAlly">EVENT ALLY</span></p>
            <h2 class="signHeader">Sign In</h2>
            <label class="email signlabel" for="email">Enter your email address</label>
            <input class="signInput"
              type="text"
              id="email"
              name="email"
              placeholder="Email address"
              required
            />
            <label class="password signlabel" for="password">Enter your Password</label>
            <input class="signInput"
              type="password"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
            <button class="signInBtn" type="submit">Sign In</button>
            <a
              class="signUpLink"
              href="javascript:void(0);"
              onclick="showSignUpForm()"
              >Don't have an account? Sign up</a
            >
          </form>
        </div>

        <div>
          <form class="signUpForm" action="/signup" method="post">
            <p class="signMessage">Welcome to <span class="eventAlly">EVENT ALLY</span class="eventAlly"></p>
            <h2 class="signHeader">Sign Up</h2>
            <label class="email signlabel" for="email">Enter your email address</label>
            <input class="signInput"
              type="text"
              id="email"
              name="email"
              placeholder="Email address"
              required
            />
            <label class="password signlabel" for="password">Enter your Password</label>
            <input class="signInput"
              type="password"
              id="password"
              name="password"
              placeholder="Password"
              required
            />
            <button class="signupBtn" type="submit">Sign Up</button>
            <a
              class="signInLink"
              href="javascript:void(0);"
              onclick="showSignInForm()"
              >Already have an account? Sign In</a
            >
          </form>
        </div>
      </div>
</section>

</section>
    <script src='/assets/js/signIn.js'></script>

    